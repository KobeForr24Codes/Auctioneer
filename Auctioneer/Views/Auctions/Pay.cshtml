@model Auctioneer.ViewModels.OrderFormViewModel

@{
    ViewBag.Title = "Pay";
}


@using (Html.BeginForm("Create", "Orders"))
{
    <div class="row" style="margin-top: 54px" >
        <div class="col-md-12">
            <div class="col-md-6">
                <div class="form-group">
                    @Html.Label("Full Name")
                    <input type="text" class="form-control" />
                </div>
                <div class="form-group">
                    @Html.LabelFor(o => o.Address)
                    @Html.TextBoxFor(o => o.Address, new { @class = "form-control" })
                    @Html.ValidationMessageFor(o => o.Address)
                </div>
                <div class="form-group">
                    @Html.Label("Credit Card")
                    <input type="text" class="form-control" />
                </div>
                @Html.HiddenFor(a => a.Auctions.Id)
                <button type="submit" value="Save" class="btn btn-success">Pay Now</button>
            </div>
            <div class="col-md-6 well well-sm" style="background: white">
                <h1>Order Summary</h1>
                <hr style="height: 1px; border: none; color: #A9A9A9; background-color: #A9A9A9;" />
                <h4>@Model.Auctions.ItemName<span class="pull-right">$@Model.HighestBid</span></h4>
                <hr style="height: 1px; border: none; color: #A9A9A9; background-color: #A9A9A9;" />
                <h4>@Html.Label("Total") <span class="pull-right "><strong>$@Model.HighestBid</strong></span></h4>
            </div>
        </div> 
    </div>
    
}
