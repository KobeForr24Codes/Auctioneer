@{
    ViewBag.Title = "Profit";
}


<h2 style="color: grey;"><i class="fas fa-chart-line"></i>&nbsp;&nbsp; Monthly Growth</h2>

<div id="chartContainer"></div>

<div class="row">
    <div class="col-md-12">
        <h4 class="pull-right" id="totalSales"></h4>
    </div>
</div>

@section scripts{
    <script type="text/javascript">
        window.onload = function () {
            var dataPoints = [];
            var chart = new CanvasJS.Chart("chartContainer", {
                theme: "theme2",
                animationEnabled: true,
                title: {
                    text: 'Monthly Growth'
                },
                subtitles: [
                    { text: " " }
                ],
                axisY: {
                    title: "Sales",
                    titleFontSize: 24,
                    includeZero: false
                },
                axisX: {
                    title: "Months",
                    titleFontSize: 24,
                    includeZero: false
                },
                data: [
                    {
                        type: "line", //change type to bar, line, area, pie, etc
                        dataPoints: dataPoints
                    }
                ]
            });

            function addData(data) {
                for (var i = 0; i < data.length; i++) {
                    dataPoints.push({
                        label: data[i].Month,
                        y: data[i].Comission
                    });
                }
                chart.render();

            }

            $.ajax({
                type: 'POST',
                url: '/../Home/GetProfit',
                dataType: 'json',
                success: function (data) {
                    addData(data.sales);
                    $('#totalSales').text("Total Sales: "+ data.totalSales);
                },
                error: function (data) {
                    alert('An error has occured. Please reload the page.');
                }
            });
        
        };
    </script>

}
