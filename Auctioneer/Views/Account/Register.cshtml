@using Auctioneer.Models
@model Auctioneer.Models.RegisterViewModel
@{
                /**/

                ViewBag.Title = "Register";
}

<div class="row">
    <div class="well well-lg col-md-offset-3 col-md-6" style="background: white; margin-top: 52px;">
        @using (Html.BeginForm("Register", "Account", FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
        {
            @Html.AntiForgeryToken()
            <h4 class="text-center">Sign Up</h4>
            <br />
            <div style="margin-left: 220px;">
                <section id="socialLoginForm">
                    @Html.Partial("_ExternalLoginsListPartial", new ExternalLoginListViewModel { ReturnUrl = ViewBag.ReturnUrl })
                </section>
            </div>
            <hr />
            <p class="text-center">Or Be Classical</p>
            <div class="form-group">
                @Html.LabelFor(m => m.Email, new { @class = "col-md-offset-3" })
                @Html.TextBoxFor(m => m.Email, new { @class = "form-control col-md-offset-3" })
                <div class="col-md-offset-3 text-danger">@Html.ValidationMessageFor(m => m.Email)</div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.FullName, new { @class = "col-md-offset-3" })
                @Html.TextBoxFor(m => m.FullName, new { @class = "form-control col-md-offset-3" })
                <div class="col-md-offset-3 text-danger">@Html.ValidationMessageFor(m => m.FullName)</div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.Password, new { @class = "col-md-offset-3" })
                @Html.PasswordFor(m => m.Password, new { @class = "form-control col-md-offset-3" })
                <div class="col-md-offset-3 text-danger">@Html.ValidationMessageFor(m => m.Password)</div>
            </div>
            <div class="form-group">
                @Html.LabelFor(m => m.ConfirmPassword, new { @class = "col-md-offset-3" })
                @Html.PasswordFor(m => m.ConfirmPassword, new { @class = "form-control col-md-offset-3" })
                <div class="col-md-offset-3 text-danger">@Html.ValidationMessageFor(m => m.ConfirmPassword)</div>
            </div>
            <div class="form-group">
                <div class="col-md-offset-5">
                    <input type="submit" class="btn btn-success" value="Register" />
                </div>
            </div>
        }
    </div>
</div>



@section Scripts {
    @Scripts.Render("~/bundles/jqueryval")
}
